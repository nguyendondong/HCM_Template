    "siteConfig",
    "navigationContent",
    "footerContent",
    "landingPageContent",
    "heritageSpots",
    "documents",
    "miniGames",
    "vrContent"
  ],

  "environment": {
    "development": {
      "clearExistingData": true,
      "batchSize": 25,
      "validateData": true,
      "generateTestUsers": true
    },
    "production": {
      "clearExistingData": false,
      "batchSize": 10,
      "validateData": true,
      "generateTestUsers": false,
      "requireConfirmation": true
    }
  },

  "validation": {
    "requiredFields": {
      "heritageSpots": ["id", "name", "location", "mapPosition", "isActive"],
      "documents": ["id", "title", "category", "type", "isActive"],
      "miniGames": ["id", "title", "gameType", "difficulty", "isActive"],
      "vrContent": ["id", "title", "category", "duration", "isActive"]
    },
    "uniqueFields": {
      "heritageSpots": ["id"],
      "documents": ["id"],
      "miniGames": ["id"],
      "vrContent": ["id"]
    }
  },

  "postSeedActions": [
    {
      "name": "createIndexes",
      "description": "Create Firestore indexes for optimized queries",
      "collections": ["heritage-spots", "documents", "mini-games", "vr-content"]
    },
    {
      "name": "generateSitemap",
      "description": "Generate sitemap for SEO",
      "enabled": true
    },
    {
      "name": "cacheWarmup",
      "description": "Warm up cache for frequently accessed data",
      "enabled": true
    }
  ],

  "statistics": {
    "expectedTotalDocuments": 50,
    "expectedCollections": 8,
    "estimatedSeedTime": "2-3 minutes",
    "dataSize": "~5MB"
  }
